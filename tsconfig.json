{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2022",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./types", "@types", "node_modules/@types"],
    "strictNullChecks": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },  
  "include": ["tasks/**/*"]
}